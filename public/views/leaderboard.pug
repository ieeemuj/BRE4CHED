extends base

mixin tableElement(rank, name, level)
  tr
    td= rank
    td= name
    td= level

block content 
  table(class="striped responsive-table centered leaderboard" style="width: 70vw; margin: 0 auto;")
    thead
      tr
        th Rank
        th Name
        th Score
    tbody
      each user, index in users
        +tableElement(`${index + 1}`, user.username, user.level*2.5)